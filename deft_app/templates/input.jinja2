<!doctype html>
<html lang="en">
  <head>
    <title>Deft</title>
    <link rel="stylesheet" type="text/css" href="static/style.css">
    {% block javascript %}
      <script src="{{ url_for('static', filename='scripts.js') }}"></script>
    {% endblock %}
  </head>
  <body>
    <h1><a href="{{ url_for('ground.main') }}">Deft Grounding Assistant</a></h1>
    <form action="{{ url_for('ground.add_groundings') }}" method="POST">
      <p>
	Name: <input name="name" type="text" id="name-box">
	Grounding: <input name="grounding" type="text" id="grounding-box">
	<input type="submit" value="submit">
      </p>
      <table>
	{% for longform, score, name, grounding in data %}
	  <tr>
	    <td>
	      <input name="select" value="{{ loop.index }}" type="checkbox">
	    <td>
	      <div>
		{{ longform }}
	      </div>
	    </td>
	    <td class="score">
	      {{ score }}
	    </td>
	    <td class="pad">
		<div class="click-grounded" data-name="{{ name }}"
		  data-grounding="{{ grounding }}">
		  {{ name }}
		</div>
	    </td>
	    <td class="pad"> 
	      <div class="click-grounded" data-name="{{ name }}"
		data-grounding="{{ grounding }}">
		   {{ grounding }}
	      </div>
	    </td>
	    <td>
	      <input name="delete_{{ loop.index }}" class="delete"
		     value="X" type="submit">
	    </td>
	  </tr>
	{% endfor %}
      </table>
    </form>
    <form action="{{ url_for('ground.generate_grounding_map') }}" method="POST">
      	<input type="submit" value="generate">
    </form>
  </body>
</html>
